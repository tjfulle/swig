#######################################################################
# Makefile for Fortran test-suite
#######################################################################

LANGUAGE	= fortran
FORTRAN		= @FORTRAN@
FC      	= @FC@
SCRIPTSUFFIX= _runme.f90

FORTRANOBJEXT = o

TCL_SO = @TCL_SO@

srcdir         = @srcdir@
top_srcdir     = @top_srcdir@
top_builddir   = @top_builddir@
abs_top_srcdir = @abs_top_srcdir@

include $(srcdir)/failing-cpp-tests.mk
include $(srcdir)/failing-c-tests.mk
include $(srcdir)/../common.mk

FORTRAN_CSUMMARY = "summary-c.txt"
FORTRAN_CXXSUMMARY = "summary-cxx.txt"

.SUFFIXES: .cpptest .ctest .multicpptest

# Rules for the different types of tests
%.cpptest:
	$(setup)
	+$(swig_and_compile_cpp)
	$(run_testcase)
	echo "$(TARGET)|passed" >> $(FORTRAN_CXXSUMMARY)

%.ctest:
	$(setup)
	+$(swig_and_compile_c)
	$(run_testcase)
	echo "$(TARGET)|passed" >> $(FORTRAN_CSUMMARY)

%.multicpptest:
	$(setup)
	+$(swig_and_compile_multi_cpp)
	$(run_testcase)
	echo "$(TARGET)|passed" >> $(FORTRAN_CXXSUMMARY)

# Runs the testcase.
run_testcase = \
	if [ -f $(SCRIPTDIR)/$(SCRIPTPREFIX)$*$(SCRIPTSUFFIX) ]; then \
	  $(COMPILETOOL) $(FORTRAN) $(SCRIPTDIR)/$(SCRIPTPREFIX)$*$(SCRIPTSUFFIX) -c \
		|| (echo "$*|failed to build test" >> $(FORTRAN_CSUMMARY) && exit 1); \
	  $(COMPILETOOL) $(FORTRAN) -o $*_runme.exe $(SCRIPTPREFIX)$*_runme.@OBJEXT@ $(LIBPREFIX)$*$(TCL_SO) \
		|| (echo "$*|failed to link test" >> $(FORTRAN_CSUMMARY) && exit 1); \
      env LD_LIBRARY_PATH=.:$$LD_LIBRARY_PATH $(RUNTOOL) ./$*_runme.exe \
		|| (echo "$*|failed to run test" >> $(FORTRAN_CSUMMARY) && exit 1) \
	fi

%.clean:
	@rm -rf $*.o $*.a

cvsignore:
	@echo Makefile
